@model IEnumerable<FC.Web.DTOs.CategoryDto>
@{
    ViewData["Title"] = "Index";
}

<h1>GetAll</h1>
<a class="btn btn-primary" asp-action="Create">Yeni Ekle</a>
<table class="table table-bordered">
    <thead>
        <tr><th>Id</th></tr>
        <tr><th>Baslik</th></tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <th><a asp-action="Update" asp-route-id="@item.Id">Güncelle</a></th>
                <th><a asp-action="Delete" asp-route-id="@item.Id">Delete</a></th>
            </tr>
        }
    </tbody>
</table>
